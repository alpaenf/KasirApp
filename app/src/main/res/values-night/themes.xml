<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme application -->
    <style name="Base.Theme.Kasir" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color for dark mode -->
        <item name="android:statusBarColor">@color/background_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors for dark mode -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_surface</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.Kasir" parent="Base.Theme.Kasir" />

    <!-- Modern Toolbar Style for Dark Mode -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Styles for Dark Mode -->
    <style name="ModernCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <!-- Button Styles for Dark Mode -->
    <style name="ModernButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ModernOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/primary_green</item>
    </style>

    <!-- Text Input Styles for Dark Mode -->
    <style name="ModernTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Dialog Styles for Dark Mode -->
    <style name="ModernAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_green</item>
    </style>
</resources>