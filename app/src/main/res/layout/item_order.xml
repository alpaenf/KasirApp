<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_item_background"
    android:padding="12dp"
    android:layout_marginVertical="2dp">

    <!-- Item Info -->
    <LinearLayout
        android:id="@+id/itemInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/quantityLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvOrderItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Jus Alpukat" />

        <TextView
            android:id="@+id/tvOrderItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            tools:text="Rp 15.000" />

    </LinearLayout>

    <!-- Quantity Controls -->
    <LinearLayout
        android:id="@+id/quantityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Decrease Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecreaseQuantity"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_remove"
            app:iconSize="16dp"
            app:iconTint="@color/text_secondary"
            app:strokeColor="@color/background_light"
            app:strokeWidth="1dp" />

        <!-- Quantity Display -->
        <TextView
            android:id="@+id/tvOrderItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/quantity_background_small"
            android:gravity="center"
            android:minWidth="28dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"
            android:text="1"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Increase Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnIncreaseQuantity"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_add"
            app:iconSize="16dp"
            app:iconTint="@color/primary_green"
            app:strokeColor="@color/primary_green"
            app:strokeWidth="1dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>